<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_orange_light</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/buttonNormal</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
    </style>


    <style name="AppTheme.NoTopBar">
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- -->
    <style name="ButtonLogin" parent="android:TextAppearance.Widget.Button">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DisableItem" parent="android:TextAppearance.Widget.Button">
        <item name="android:textSize">9pt</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="ToolbarPopUp" parent ="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/theme_window_background</item>
    </style>

    <style name="item_order_style">
        <item name="android:layout_marginLeft">@dimen/bd_margin</item>
        <item name="android:layout_marginRight">@dimen/bd_margin</item>
        <item name="android:layout_marginTop">@dimen/bd_margin_top</item>
    </style>


</resources>
