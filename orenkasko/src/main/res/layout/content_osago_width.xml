<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_balance_vertical_margin"
        android:paddingLeft="@dimen/activity_blance_horizontal_margin"
        android:paddingRight="@dimen/activity_blance_horizontal_margin"
        android:paddingTop="@dimen/activity_balance_vertical_margin">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- ############### way ###################### -->

                <RelativeLayout
                    android:id="@+id/item_spin_possessor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_way" />

                    <Spinner
                        android:id="@+id/spin_possessor"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!--
                -->
                <!-- ################### Type--><!-- ################### Sub Type-->
                <RelativeLayout
                    android:id="@+id/item_spin_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:paddingBottom="10dp"

                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/spin_type" />

                    <Spinner
                        android:id="@+id/spin_type"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>


                <!-- ################### -->
                <RelativeLayout
                    android:id="@+id/item_spin_sub_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_sub_type" />

                    <Spinner
                        android:id="@+id/spin_sub_type"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>


                <!-- ################### --><!-- ################### Power -->
                <RelativeLayout
                    android:id="@+id/item_spin_power"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_power" />

                    <Spinner
                        android:id="@+id/spin_power"
                        style="@style/item_spin"

                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!-- ################### Period_ispolzovania -->
                <RelativeLayout
                    android:id="@+id/item_spin_period_ispolzovania"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/spin_period_ispolzovania" />

                    <Spinner
                        android:id="@+id/spin_period_ispolzovania"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout><!-- ################### region_way-->
                <RelativeLayout
                    android:id="@+id/item_spin_region"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="@dimen/spin_width"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_region" />

                    <Spinner
                        android:id="@+id/spin_region"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:spinnerMode="dialog" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!-- ################### city_way-->
                <RelativeLayout
                    android:id="@+id/item_spin_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_city" />

                    <Spinner
                        android:id="@+id/spin_city"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:spinnerMode="dialog" />


                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!-- ################### navigat-->

                <RelativeLayout
                    android:id="@+id/item_spin_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/item_navigation_text"
                        style="@style/item_spin_text"
                        android:layout_width="@dimen/spin_width"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_navigat" />

                    <ImageButton

                        android:id="@+id/item_navigation_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/item_navigation_text_count"
                        android:layout_toStartOf="@+id/item_navigation_text_count"

                        android:background="@null"
                        app:srcCompat="@drawable/ic_remove" />

                    <TextView
                        android:id="@+id/item_navigation_text_count"
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/item_navigation_add"
                        android:layout_toStartOf="@+id/item_navigation_add"
                        android:minWidth="24dp"
                        android:text="2"
                        android:textAlignment="center" />

                    <ImageButton

                        android:id="@+id/item_navigation_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        app:srcCompat="@drawable/ic_add" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!-- ############### driver_age ###################### -->

                <RelativeLayout
                    android:id="@+id/item_spin_driverAgeStage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="@dimen/spin_width"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_driver_age" />

                    <Spinner
                        android:id="@+id/spin_driverAgeStage"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!-- ############### first ###################### -->

                <RelativeLayout
                    android:id="@+id/item_spin_firstInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spin_first" />

                    <Switch
                        android:id="@+id/switch_firstInsurance"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>


                <!-- ############### discount ###################### -->

                <RelativeLayout
                    android:id="@+id/item_spin_discount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="@dimen/spin_width"
                        android:layout_height="wrap_content"

                        android:text="@string/spin_discount" />

                    <Spinner
                        android:id="@+id/spin_discount"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!-- ############### discount ###################### -->

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/item_spin_text"
                        android:layout_width="@dimen/spin_width"

                        android:layout_height="wrap_content"
                        android:text="@string/spin_name_insurance" />

                    <Spinner
                        android:id="@+id/spin_insurance"
                        style="@style/item_spin"
                        android:layout_width="@dimen/spin_width_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <include layout="@layout/separator_content_osago" />
                </RelativeLayout>

                <!-- ############### discount ###################### -->

                <LinearLayout
                    android:id="@+id/item_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_spin_height"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/item_amount_title"
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/amount_text" />

                    <TextView
                        android:id="@+id/item_amount_value"
                        style="@style/item_spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=" 1230.45 Ñ€" />
                </LinearLayout>

                <!-- ################# end ########### -->
                <Button

                    android:id="@+id/action_next"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="@dimen/next_button_padding"

                    android:text="@string/action_osago"
                    android:textStyle="bold" />

                <!-- ################# end ########### -->
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>